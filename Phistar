const fs = require('fs');
const path = require('path');

// Define the specific expected text to check in the file
const requiredTexts = [
    "global.link = 'https://whatsapp.com/channel/0029VagdMGd6LwHms3wqEm0m'",  // Check for this exact line
    "global.botname = 'BigDaddy V1'", // Check for this exact line
    "global.ownername = 'ᴘʜ✦ꜱᴛᴀʀ'" // Check for this exact line
];

// Path to the file to check
const filePath = path.join(__dirname, 'Phistarbots.js');

// Function to check the integrity of the Phistarbots.js file
async function checkAntiClone() {
    // Check if the file exists
    if (fs.existsSync(filePath)) {
        // Read the content of the file
        const fileContent = fs.readFileSync(filePath, 'utf-8');

        // Check if all the required strings exist in the file content
        let validationPassed = true;
        requiredTexts.forEach(text => {
            if (!fileContent.includes(text)) {
                console.error(`Missing required text: ${text}`);
                validationPassed = false;
            }
        });

        // If any required text is missing, show an error
        if (!validationPassed) {
            console.error('Anti-clone validation failed!');
            // Keep spamming the message in the console if validation fails
            setInterval(() => {
                console.error('Corner Idiot, do you think you can clone me? Anti-clone detected');
            }, 1000); // Spam every second
        } else {
            console.log('Integrity check passed: Phistarbots.js is secure.');
        }
    } else {
        // If the file doesn't exist, throw an error and spam the console
        console.error('Corner Idiot, do you think you can clone me? Anti-clone detected');
        setInterval(() => {
            console.error('Corner Idiot, do you think you can clone me? Anti-clone detected');
        }, 1000); // Spam every second
    }
}

checkAntiClone();
