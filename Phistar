const fs = require('fs');
const path = require('path');

// Define the expected critical bot file content (using your defined variables)
const expectedFileContent = `
global.ownernumber = '09128019141' // creator number
global.ownername = 'ᴘʜ✦ꜱᴛᴀʀ' // owner name
global.botname = 'BigDaddy V1' // name of the bot
