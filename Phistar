const fs = require('fs');

global.ownername = 'ᴘʜ✦ꜱᴛᴀʀ';  // expected owner name
global.botname = 'BigDaddy V1';   // expected bot name
global.link = 'https://whatsapp.com/channel/0029VagdMGd6LwHms3wqEm0m';  // expected link

const checkAntiClone = () => {
    try {
        const filePath = './phistarbot.js';  // path to the bot script

        // Read the content of the bot script
        const sanitizedContent = fs.readFileSync(filePath, 'utf-8').replace(/\s+/g, '').toLowerCase();

        // Check if the content matches the expected global variables
        if (sanitizedContent.includes(global.ownername.toLowerCase())) {
            console.log('Owner name is correct.');
        } else {
            throw new Error('Owner name does not match! Anti-clone detected.');
        }

        if (sanitizedContent.includes(global.botname.toLowerCase())) {
            console.log('Bot name is correct.');
        } else {
            throw new Error('Bot name does not match! Anti-clone detected.');
        }

        if (sanitizedContent.includes(global.link.toLowerCase())) {
            console.log('Link is correct.');
        } else {
            throw new Error('Link does not match! Anti-clone detected.');
        }

        // If all checks pass, the bot starts
        console.log('Integrity check passed: Phistarbots.js is secure.');
        console.log('Bot is now working!');

    } catch (error) {
        console.error(error.message);

        // Spam the console with anti-clone messages if any condition fails
        setInterval(() => {
            console.error('Corner Idiot, do you think you can clone me? Anti-clone detected!');
        }, 1000);  // Spam every second
    }
};

checkAntiClone();
